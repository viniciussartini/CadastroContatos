@model ContatoModel
@{
    ViewData["Title"] = "Apagar contatos";
}

<div class="text-center">
    <h3>Realmente deseja excluir o contato @Model.Nome?</h3>
</div>

<a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="ConfApagar" asp-route-id="@Model.Id">Confirmar</a>