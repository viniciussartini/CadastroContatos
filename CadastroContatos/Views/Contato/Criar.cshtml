@{
    ViewData["Title"] = "Cadastro de contatos";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" id="email" placeholder="Digite o e-mail do contato">
    </div>

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" class="form-control" id="telefone" placeholder="Digite o telefone do contato">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>

    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>